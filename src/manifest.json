{
	"manifest_version": 2,

	"name": "Imagus Reborn",
	"version": "0.9.9.9",
	"description": "__MSG_APP_DESCRIPTION__",
	"default_locale": "en",
	"homepage_url": "https://www.reddit.com/r/Imagus",

	"icons": {
		"128": "common/img/logo_on_128x128.ico",
		"96": "common/img/logo_on_96x96.ico",
		"64": "common/img/logo_on_64x64.ico",
		"24": "common/img/logo_on_24x24.ico"
	},

	"browser_action": {
		"default_icon": "common/img/logo_on_24x24.ico",
		"default_title": "Imagus Reborn"
	},

	"permissions": [
		"downloads",
		"history",
		"storage",
		"<all_urls>"
	],

	"incognito": "not_allowed",

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["common/app.js"],
			"all_frames": true,
			"run_at": "document_start"
		},
		{
			"matches": ["<all_urls>"],
			"js": [
				"content/content-context.js",
				"content/previewOverlay.js"
			],
			"all_frames": true,
			"run_at": "document_idle"
		}
	],

	"background": {
		"scripts": [
			"background/service.js"
		],
		"persistent": true
	},

	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": true
	}
}
